@model ArdaProje.Models.PT
@using ArdaProje.Services;
@inject IUserSessionService UserSessionService

@{
    ViewData["Title"] = "Ana Sayfa";
    bool isPt = false; // Varsayılan olarak false ata
    ViewBag.IsPt = isPt;
    var selectedPTID = Model.PTID;
}
@Html.Partial("~/Views/Shared/_Header.cshtml");
<div class="container">
<h2>Kullanıcı Düzenle</h2>
<form asp-action="UpdateUser" method="post">
    <input type="hidden" name="UserID" value="Model.UserID" />
    <div class="form-group">
        <label>Ad:</label>
        <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" required>
    </div>
    <div class="form-group">
        <label>Soy Ad:</label>
        <input type="text" class="form-control" name="LastName" value="@Model.LastName" required>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input type="email" class="form-control" name="Email" value="@Model.Email" required>
    </div>
    <h2>asd</h2>
      <div class="form-group">
        <label>Personal Trainer:</label>
            <select asp-for="PTID" asp-items="ViewBag.PTSelectList" class="form-control">
                <option value="">PT Seçiniz</option>
            </select>
    </div>
    </br>
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
<form asp-action="DeleteUser" method="post">
    <input type="hidden" name="id" value="Model.UserID" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">Sil</button>
</form>
</div>